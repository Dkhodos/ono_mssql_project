{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    "lib": ["ESNext", "ES2022.String"],
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "types": ["node", "vitest/globals"]}
}
